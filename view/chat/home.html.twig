            if (!recognizing && click) {
                recognition.start();
            }
        }, 2000);


        function fetch_messages() {
            $.ajax({
                url: '{{ url_root }}meeting/messages/',
                method: "POST",
                success: function(data){
                    $('#chat').html(data);
                }
            })
        }

        function send_message() {
            var value = $.trim(document.getElementById("final").innerHTML);
            if (value != "") {
                $.ajax({
                    type: "POST",
                    url: "{{ url_root }}meeting/send_message/",
                    dataType: "html",
                    data: { "message": value },
                    success: function() {
                    }
                });
                document.getElementById("final").innerHTML = "";
                final_transcript = "";
            }

        }

