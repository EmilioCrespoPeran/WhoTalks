{% extends 'template.html.twig' %}

{% block body %}

<div class="col-12">
    {% include 'meeting/form.html.twig' %}

    <a href="{{ url_root }}logout/">Cerrar sesi&oacute;n</a>

    {% if meetings|length > 0 %}
        <h1>Lista de reuniones</h1>

        <div class="row">
            <div class="offset-2 col-8">
                <table class="table table-dark">
                    <thead>
                    <tr>
                        <th scope="col">Reuni&oacute;n</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in meetings %}
                        <tr>
                            <th>
                                {{ item.getName }}
                            </th>
                            <td class="text-right">
                                <form method="POST" action="{{ url_root }}meeting/" style="display: inline">
                                    <input type="hidden" name="meeting_id" value="{{ item.getId }}"/>
                                    <button type="submit" class="btn btn-primary">Chat</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        <h1>No hay reuniones disponibles</h1>
        <p class="text-muted">
            <a href="{{ url_root }}new/">Crear nueva reuni&oacute;n</a>.
        </p>
    {% endif %}
</div>

{% endblock %}